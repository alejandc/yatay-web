<div class="span10 offset1 well">
    <%= link_to "Nuevo cliente", new_client_path, {class: "btn btn-primary", style: "float:right"} %>
</div>    

<div class="row-fluid">
  <div class="span10 offset1">
    
    <% if @client.blank? %>
        <div class="alert alert-warning">
          <% if params[:client]%>
            <%= t('.info_label_empty_filter_clients') %>
          <% else %>
            <%= t('.info_label_empty_clients') %>
          <% end %>
        </div>
    <% else %>
      <table class="table table-striped table-bordered table-condensed">
        <thead class="table-header">
          <tr>
            <th style="text-align: center;">#</th>
            <th> Nombre y apellido </th>
            <th> Tipo de Documento </th>
            <th> Nro. de documento </th>
            <th> Direccion </th>

            <th> Acciones </th>
          </tr>
        </thead>

        <tbody>
          <% @client.each_with_index do |client, index| %>
            <tr>
              <td style="text-align: center;"><%= index %></td>
              <td><%= client.titular %></td>
              <td><%= client.document_type %></td>
              <td><%= client.document_number %></td>
              <td><%= client.address %></td>
              
              <td style="text-align: center;">
                <div class="btn-group">
                  <%= link_to "<i class='icon-eye-open'></i>".html_safe, client_path(client), :class => 'btn', :rel => 'tooltip', :title => 'Detalle' %>
                  <%= link_to "<i class='icon-print'></i>".html_safe, client_path(client, format: "pdf"), :class => 'btn', :rel => 'tooltip', :title => 'Imprimir', :target => "_blank" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <%= paginate @client, :window => 2 %>
    
    <% end %> 
  </div>
</div>