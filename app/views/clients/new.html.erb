<div class="row-fluid">
  <div class="span12">
    
    <div class="row-fluid">
      <div class="span10 offset1">
        <h3>
          Nuevo cliente
        </h3>
      </div>
    </div>
    
    <div class="row-fluid">
      <div class="span7 offset1">

				<%= form_for @client, :html => { :class => 'form-horizontal', :style => "margin-bottom: 0px;"} do |f| %>

					<%= render :partial => 'form', :locals => {:f => f} %>

				  <div class="control-group">
				    <div class="controls">
							<%= f.submit "Crear", :class => "btn btn-success" %>
				    </div>
				  </div>

				<% end %>

      </div>
    </div>
    
  </div>
</div>