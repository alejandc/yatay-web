<div class="row-fluid">
  <div class="span12 offset1">
    <h3> Cliente #<%= @client.id %> </h3>
  </div>  
</div>

<div class="row-fluid">

  <div class="span3 offset1">
    <label>Nombre:</label><span> <%= @client.name %></span>
    <label>Documento de identidad:</label> <span><%= @client.document_type + " " + @client.document_number %></span>
    <label>Direccion:</label><span> <%= @client.address %></span>
  </div>

  <div class="span7">
    
    <% if @client.certificates.blank? %>
      <div class="alert alert-warning">
        <%= t('.info_label_empty_client_certificates') %>
      </div>
    <% else %>
      <table class="table table-striped table-bordered table-condensed">
        <thead class="table-header">
          <tr>
            <th> <%= t('.table_th_date') %> </th>
            <th> <%= t('.table_th_taxi_license_number') %> </th>
            <th> <%= t('.table_th_clock_number') %> </th>
            <th> <%= t('.table_th_car_model') %> </th>
            <th> <%= t('.table_th_actions') %> </th>
          </tr>
        </thead>
          
        <tbody>
          <% @client.certificates.each do |cert| %>
            <tr>
              <td><%= cert.created_at %></td>
              <td><%= cert.taxi_license_number %></td>
              <td><%= cert.clock_number %></td>
              <td><%= cert.car_model %></td>
              <td>
                <div class="btn-group">
                  <%= link_to "<i class='icon-eye-open'></i>".html_safe, certificate_path(cert), :class => 'btn', :rel => 'tooltip', :title => 'Detalle' %>
                  <%= link_to "<i class='icon-print'></i>".html_safe, certificate_path(cert, format: "pdf"), :class => 'btn', :rel => 'tooltip', :title => 'Imprimir', :target => "_blank" %>
                </div>
              </td>             
            </tr>     
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>    

<div class="row-fluid" style="padding-top:30px">
  <div class="span10 offset1 well">
      <%= link_to "Nuevo certificacion", new_certificate_path(client_id: @client.id ), {class: "btn btn-primary", style: "float:right"} %>
  </div>
</div>  